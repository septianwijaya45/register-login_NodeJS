<%- include('../include/frontend/layouts/partials/_header.ejs') %>
<%- include('../include/frontend/layouts/partials/navbar.ejs') %>

<div class="row">
    <h3 class="text-center text-white pt-5">Register Form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/api/register" method="post" enctype="application/x-www-form-urlencoded">
                            <h3 class="text-center text-warning">Register Form</h3>
                            <div class="form-group">
                                <label for="username" class="text-warning">Username:</label><br>
                                <input type="text" name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-warning">Email:</label><br>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-warning">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div><br>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-warning btn-md col-12" value="submit">
                            </div>
                            <div id="login-link" class="text-center">
                                <a href="/login" class="text-warning">Have a Account? Login Here!</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
<%- include('../include/frontend/layouts/partials/_footer.ejs') %>